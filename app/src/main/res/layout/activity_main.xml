<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.android.mycalculator.MainActivity">

    <EditText
        android:id="@+id/etOpText"
        android:layout_width="353dp"
        android:layout_height="111dp"
        android:gravity="bottom|end"
        android:hint="0"
        android:inputType="numberSigned|numberDecimal"
        android:textAlignment="gravity"
        android:textSize="60sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.032" />

    <TableLayout
        android:layout_width="360dp"
        android:layout_height="386dp"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:gravity="fill_vertical"
        android:padding="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.488"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/etOpText"
        app:layout_constraintVertical_bias="0.0"
        tools:layout_editor_absoluteX="67dp">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <Button
                android:id="@+id/bu7"
                android:layout_width="0px"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:onClick="numClick"
                style="@style/WhiteBut"
                android:text="7" />

            <Button
                android:id="@+id/bu8"
                android:layout_width="0px"
                android:layout_height="match_parent"
                android:layout_weight="1"
                style="@style/WhiteBut"
                android:onClick="numClick"
                android:text="8" />

            <Button
                android:id="@+id/bu9"
                android:layout_width="0px"
                android:layout_height="match_parent"
                android:layout_weight="1"
                style="@style/WhiteBut"
                android:onClick="numClick"
                android:text="9" />

            <Button
                android:id="@+id/buDiv"
                style="@style/OrangeBut"
                android:layout_width="0px"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:padding="0px"
                android:onClick="divOp"
                android:text="/" />

            <Button
                android:id="@+id/buClr"
                android:layout_width="0px"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:onClick="clearText"
                style="@style/WhiteBut"
                android:text="C" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <Button
                android:id="@+id/bu4"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                style="@style/WhiteBut"
                android:onClick="numClick"
                android:text="4" />

            <Button
                android:id="@+id/bu5"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                style="@style/WhiteBut"
                android:onClick="numClick"
                android:text="5" />

            <Button
                android:id="@+id/bu6"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                style="@style/WhiteBut"
                android:onClick="numClick"
                android:text="6" />

            <Button
                android:id="@+id/buMul"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                style="@style/OrangeBut"
                android:onClick="mulOp"
                android:text="*" />

            <Button
                android:id="@+id/buMod"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                style="@style/WhiteBut"
                android:onClick="modOp"
                android:text="%" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <Button
                android:id="@+id/bu1"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                style="@style/WhiteBut"
                android:onClick="numClick"
                android:text="1" />

            <Button
                android:id="@+id/bu2"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                style="@style/WhiteBut"
                android:onClick="numClick"
                android:text="2" />

            <Button
                android:id="@+id/bu3"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                style="@style/WhiteBut"
                android:onClick="numClick"
                android:text="3" />

            <Button
                android:id="@+id/buSub"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                style="@style/OrangeBut"
                android:onClick="subOp"
                android:text="-" />

            <Button
                android:id="@+id/buInv"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                style="@style/WhiteBut"
                android:onClick="inv"
                android:text="1/x" />
        </TableRow>


        <TableRow
            style="@style/Base.Widget.AppCompat.ButtonBar"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <Button
                android:id="@+id/bu0"
                android:layout_width="0px"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:onClick="numClick"
                style="@style/WhiteBut"
                android:text="0" />

            <Button
                android:id="@+id/buDot"
                android:layout_width="0px"
                android:layout_height="match_parent"
                android:layout_weight="1"
                style="@style/WhiteBut"
                android:onClick="numClick"
                android:text="." />

            <Button
                android:id="@+id/buPlus"
                android:layout_width="0px"
                android:layout_height="match_parent"
                android:layout_weight="1"
                style="@style/OrangeBut"
                android:onClick="addOp"
                android:text="+" />

            <Button
                android:id="@+id/buEq"
                style="@style/WhiteBut"
                android:layout_width="0px"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:onClick="compute"
                android:text="=" />
        </TableRow>
    </TableLayout>

</android.support.constraint.ConstraintLayout>
